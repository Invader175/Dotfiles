<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu>

<menu id="AccessoriesMenu" label="Accessories">
	<menu id="MailPipeMenu" label="Mail" execute="al-mail-pipemenu"/>
	<menu id="MessagingPipeMenu" label="Messaging" execute="al-messaging-pipemenu"/>
	<menu id="FilesharingPipeMenu" label="File Sharing" execute="al-filesharing-pipemenu"/>
	<menu id="screenshot" label="Screenshot">
		<item label="Screenshot Now">
			<action name="Execute">
				<command>scrot &apos;ArchLabs_%Y-%m-%d-%S_$wx$h.png&apos; -e &apos;mv $f $$(xdg-user-dir PICTURES) ; gpicview $$(xdg-user-dir PICTURES)/$f&apos;</command>
			</action>
		</item>
		<item label="Screenshot in 5">
			<action name="Execute">
				<command>scrot -d 5 &apos;ArchLabs_%Y-%m-%d-%S_$wx$h.png&apos; -e &apos;mv $f $$(xdg-user-dir PICTURES) ; gpicview $$(xdg-user-dir PICTURES)/$f&apos;</command>
			</action>
		</item>
		<item label="Screenshot in 10">
			<action name="Execute">
				<command>scrot -d 10 &apos;ArchLabs_%Y-%m-%d-%S_$wx$h.png&apos; -e &apos;mv $f $$(xdg-user-dir PICTURES) ; gpicview $$(xdg-user-dir PICTURES)/$f&apos;</command>
			</action>
		</item>
		<item label="Screenshot With Selection">
			<action name="Execute">
				<command>scrot -s &apos;ArchLabs_%Y-%m-%d-%S_$wx$h.png&apos; -e &apos;mv $f $$(xdg-user-dir PICTURES) ; gpicview $$(xdg-user-dir PICTURES)/$f&apos;</command>
			</action>
		</item>
	</menu>
</menu>
<menu id="preferences" label="Preferences">
	<menu id="obConfig" label="Openbox">
		<item label="Openbox Settings">
			<action name="Execute">
				<command>obconf</command>
			</action>
		</item>
		<item label="Menu GUI">
			<action name="Execute">
				<command>kickshaw</command>
			</action>
		</item>
		<item label="Keybind GUI">
			<action name="Execute">
				<command>obkey</command>
			</action>
		</item>
		<item label="Autostart GUI">
			<action name="Execute">
				<command>ob-autostart</command>
			</action>
		</item>
		<separator/>
		<item label="Edit menu.xml">
			<action name="Execute">
				<command>exo-open ~/.config/openbox/menu.xml</command>
			</action>
		</item>
		<item label="Edit rc.xml">
			<action name="Execute">
				<command>exo-open ~/.config/openbox/rc.xml</command>
			</action>
		</item>
		<item label="Edit autostart">
			<action name="Execute">
				<command>exo-open ~/.config/openbox/autostart</command>
			</action>
		</item>
		<separator/>
		<item label="Openbox Reconfigure">
			<action name="Reconfigure"/>
		</item>
		<item label="Openbox Restart">
			<action name="Restart"/>
		</item>
	</menu>
	<menu id="CompositingPipeMenu" label="Compositor" execute="al-compositor"/>
	<menu id="PolybarPipeMenu" label="Polybar" execute="al-polybar-pipemenu"/>
	<menu id="ConkyPipeMenu" label="Conky" execute="al-conky-pipemenu"/>
	<menu id="TintPipeMenu" label="Tint2" execute="al-tint2-pipemenu"/>
	<menu id="SettingsPipeMenu" label="Settings" execute="al-settings-pipemenu"/>
	<menu id="SystemPipeMenu" label="System" execute="al-system-pipemenu"/>
</menu>

<menu id="root-menu" label="Openbox 3">
	<separator label="Arch"/>
	<menu id="TerminalPipeMenu" label="Terminal" execute="al-terminal-pipemenu"/>
	<menu id="FilePipeMenu" label="File Manager" execute="al-files-pipemenu"/>
	<menu id="BrowserPipeMenu" label="Web Browser" execute="al-browsers-pipemenu"/>
	<menu id="EditorPipeMenu" label="Text Editor" execute="al-editors-pipemenu"/>
	<separator/>
	<menu id="OfficePipeMenu" label="Office" execute="al-office-pipemenu"/>
	<menu id="MediaPipeMenu" label="Multimedia" execute="al-media-pipemenu"/>
	<menu id="GraphicPipeMenu" label="Graphics" execute="al-graphics-pipemenu"/>
	<menu id="AccessoriesMenu"/>
	<separator/>
	<menu id="pipe-placesmenu" label="Places" execute="al-places-pipemenu --recent ~/"/>
	<separator/>
	<menu id="preferences"/>
	<menu id="help" label="Help and Info" execute="al-help-pipemenu"/>
	<menu id="keybinds" label="Keybinds" execute="al-kb-pipemenu"/>
	<separator/>
	<item label="Lock Screen">
		<action name="Execute">
			<command>i3lock-fancy -p</command>
		</action>
	</item>
	<item label="Exit Openbox">
		<action name="Execute">
			<command>rofr.sh -l</command>
		</action>
	</item>
</menu>

</openbox_menu>